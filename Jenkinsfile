// Jenkinsfile
// ----------------------------------------------------------------------
// This is as simple as it gets with declarative pipeline
// ----------------------------------------------------------------------
pipeline {
           agent any 
		   
		    stages  {
			
			          stage('clean') {
			
			        steps {
					       echo 'world'
                          }					
					}
					
					stage('validate'){
					        
							steps {
					                echo 'hello world'
					              }
					}
					stage('compile'){
					        
							steps {
					                echo 'hello world'
					              }
					}
					stage('package'){
					        
							steps {
					                echo 'hello world'
					              }
					}
					stage('install'){
					        
							steps {
					                echo 'hello world'
					              }
					}
					stage('test'){
					        
							steps {
					                echo 'hello world'
					              }
					}
		     }
  
}